@model MelnikauDV.Models.Advertisement

@{
    ViewData["Title"] = "Удалить рекламу";
}

<h1>Удаление</h1>

<h3>Вы уверены, что хотите удалить</h3>
<div>
    <h4>Реклама</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AdvertisementId" />
        <div class="form-row">
            <div class="form-group col-md-6">
                <input type="submit" value="Удалить" class="btn btn-danger btn-primary btn-block" /> |
            </div>
            <div class="form-group col-md-6">
                <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fas fa-arrow-left"></i></a>
            </div>
        </div>
</form>

       
</div>
