@model MelnikauDV.Models.ProfitAdv

@{
    ViewData["Title"] = "Расчет прибыли";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Расчет прибыли рекламы </h1>

<h4>Расчитать прибыль</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Effort" class="control-label"></label>
                <input asp-for="Effort" class="form-control" />
                <span asp-validation-for="Effort" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PageViews" class="control-label"></label>
                <input asp-for="PageViews" class="form-control" />
                <span asp-validation-for="PageViews" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Advertisement.Company" class="control-label"></label>
                <select asp-for="AdvertisementId" class="form-control" asp-items="ViewBag.AdvertisementId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Расчитать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
